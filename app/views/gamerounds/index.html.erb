<p id="notice"><%= notice %></p>

<h1>Gamerounds</h1>

<table>
  <thead>
    <tr>
      <th>Round</th>
      <th>Game</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gamerounds.each do |gameround| %>
      <tr>
        <td><%= gameround.round %></td>
        <td><%= gameround.game %></td>
        <td><%= link_to 'Show', gameround %></td>
        <td><%= link_to 'Edit', edit_gameround_path(gameround) %></td>
        <td><%= link_to 'Destroy', gameround, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

